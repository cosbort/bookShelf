generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Book {
  id           String   @id @default(uuid())
  isbn         String?
  title        String
  author       String
  genre        String
  status       String
  coverUrl     String?
  description  String?
  publishedDate String?
  publisher    String?
  pageCount    Int?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
